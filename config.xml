<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0" 
        id="com.mepwebs.pelladeocio" 
        version="1.0.0">
    <name>Pella de Ocio</name>
    <description>
        App Pella de Ocio
    </description>
    <author email="soporte@pelladeocio.com" href="http://pelladeocio.com">
        Mepwebs
    </author>
    <content src="index.html" />
    
<!--    <preference name="phonegap-version" value="cli-5.2.0" />-->
    <preference name="phonegap-version" value="cli-6.0.0" />
    
<!--    <preference name="useBrowserHistory" value="true"/>-->
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
<!--    <preference name="ios-statusbarstyle" value="black-opaque" />-->
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    

    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="13" />
<!--    <preference name="android-minSdkVersion" value="10" />-->
    <preference name="android-installLocation" value="auto" />
    
    
    
    <!------ PLUGINS ------->
    
    <!--
    <plugin name="cordova-plugin-console" />
    
    <plugin name="cordova-plugin-device" />

    <plugin name="cordova-plugin-dialogs" />
    -->
    
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.globalization" />
    
    
    <!-- SplashScreen -->
    <!--<plugin name="cordova-plugin-splashscreen" source="npm" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AutoHideSplashScreen" value="false" />
    <splash src="splash.png" />-->
    
    <gap:plugin name="org.apache.cordova.splashscreen" source="npm" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AutoHideSplashScreen" value="false" />
    <gap:splash src="splash.png" />
    
    <!--<gap:plugin name="org.apache.cordova.inappbrowser" /> -->
    
    
    <!--    Compartir en RRSS   -->
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
    
    <!--    Notificaciones PUSH   -->
    <preference name="android-build-tool" value="gradle" />
    <plugin name="phonegap-plugin-push" spec="1.6.2" source="npm">
        <param name="SENDER_ID" value="41817165383" />
    </plugin>
    
    
    <!--    WhiteList   -->
    <plugin name="cordova-plugin-whitelist" source="npm" />
    <allow-navigation href="*" />
    <access origin="*" />
    <!-- Permitir whatsapp -->
    <allow-intent href="whatsapp:*" />
    <access origin="whatsapp:*" launch-external="yes" />    
    
    
    <icon src="icon.png" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="winphone" />
    <platform name="wp8" />
</widget>